<?xml version="1.0" encoding="UTF-8"?>
<jasperReport
        xmlns="http://jasperreports.sourceforge.net/jasperreports"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
        name="DTEFactura"
        pageWidth="595"
        pageHeight="842"
        columnWidth="555"
        leftMargin="20"
        rightMargin="20"
        topMargin="20"
        bottomMargin="20"
        uuid="3e821c99-4b70-47e7-8f9c-b51f5cf9f0c8">

    <!-- Parámetros -->
    <parameter name="logoImage" class="java.lang.String"/>
    <parameter name="emisorNombre" class="java.lang.String"/>
    <parameter name="emisorNit" class="java.lang.String"/>
    <parameter name="emisorNrc" class="java.lang.String"/>
    <parameter name="emisorDireccion" class="java.lang.String"/>
    <parameter name="emisorTelefono" class="java.lang.String"/>
    <parameter name="emisorCorreo" class="java.lang.String"/>

    <parameter name="clienteNombre" class="java.lang.String"/>
    <parameter name="clienteDocumento" class="java.lang.String"/>
    <parameter name="clienteTelefono" class="java.lang.String"/>
    <parameter name="clienteCorreo" class="java.lang.String"/>
    <parameter name="fechaEmision" class="java.lang.String"/>
    <parameter name="horaEmision" class="java.lang.String"/>

    <parameter name="descripcionItem" class="java.lang.String"/>
    <parameter name="cantidadItem" class="java.lang.String"/>
    <parameter name="precioItem" class="java.lang.String"/>
    <parameter name="subtotalItem" class="java.lang.String"/>

    <parameter name="totalNeto" class="java.lang.String"/>
    <parameter name="totalIva" class="java.lang.String"/>
    <parameter name="totalTributo" class="java.lang.String"/>
    <parameter name="totalPagar" class="java.lang.String"/>

    <parameter name="codigoGeneracion" class="java.lang.String"/>
    <parameter name="observaciones" class="java.lang.String"/>

    <detail>
        <band height="700">

            <!-- Logo -->
            <image>
                <reportElement x="0" y="0" width="120" height="40"/>
                <imageExpression><![CDATA[$P{logoImage}]]></imageExpression>
            </image>

            <!-- Título -->
            <textField>
                <reportElement x="130" y="0" width="425" height="40" forecolor="#A67B5B"/>
                <textElement textAlignment="Right">
                    <font size="16" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["FACTURA ELECTRÓNICA - DTE"]]></textFieldExpression>
            </textField>

            <!-- Línea divisoria -->
            <line>
                <reportElement x="0" y="45" width="555" height="1" forecolor="#4CAF50"/>
            </line>

            <!-- Emisor Datos -->
            <textField>
                <reportElement x="0" y="50" width="555" height="15" forecolor="#A67B5B"/>
                <textElement>
                    <font size="10" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{emisorNombre}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="0" y="65" width="555" height="12" forecolor="#333333"/>
                <textElement>
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA["NIT: " + $P{emisorNit} + " | NRC: " + $P{emisorNrc}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="0" y="77" width="555" height="12" forecolor="#333333"/>
                <textElement>
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{emisorDireccion}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="0" y="89" width="555" height="12" forecolor="#333333"/>
                <textElement>
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA["Tel: " + $P{emisorTelefono} + " | Correo: " + $P{emisorCorreo}]]></textFieldExpression>
            </textField>

            <line>
                <reportElement x="0" y="105" width="555" height="1" forecolor="#4CAF50"/>
            </line>

            <!-- Cliente Datos -->
            <textField>
                <reportElement x="0" y="110" width="555" height="12" forecolor="#A67B5B"/>
                <textElement>
                    <font size="9" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["CLIENTE: " + $P{clienteNombre}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="0" y="122" width="555" height="12" forecolor="#333333"/>
                <textElement>
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA["Documento: " + $P{clienteDocumento}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="0" y="134" width="555" height="12" forecolor="#333333"/>
                <textElement>
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA["Teléfono: " + $P{clienteTelefono}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="0" y="146" width="555" height="12" forecolor="#333333"/>
                <textElement>
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA["Correo: " + $P{clienteCorreo}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="0" y="158" width="555" height="12" forecolor="#333333"/>
                <textElement>
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA["Fecha Emisión: " + $P{fechaEmision} + " " + $P{horaEmision}]]></textFieldExpression>
            </textField>

            <line>
                <reportElement x="0" y="175" width="555" height="1" forecolor="#4CAF50"/>
            </line>

            <!-- Ítem -->
            <textField>
                <reportElement x="0" y="185" width="330" height="15" forecolor="#333333"/>
                <textElement>
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{descripcionItem}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="340" y="185" width="60" height="15" forecolor="#333333"/>
                <textElement textAlignment="Right">
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{cantidadItem}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="405" y="185" width="70" height="15" forecolor="#333333"/>
                <textElement textAlignment="Right">
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA["$" + $P{precioItem}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="480" y="185" width="75" height="15" forecolor="#333333"/>
                <textElement textAlignment="Right">
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA["$" + $P{subtotalItem}]]></textFieldExpression>
            </textField>

            <line>
                <reportElement x="0" y="205" width="555" height="1" forecolor="#4CAF50"/>
            </line>

            <!-- Totales -->
            <textField>
                <reportElement x="280" y="215" width="275" height="15" forecolor="#A67B5B"/>
                <textElement textAlignment="Right">
                    <font size="9" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["Total Neto: $" + $P{totalNeto}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="280" y="230" width="275" height="15" forecolor="#A67B5B"/>
                <textElement textAlignment="Right">
                    <font size="9" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["IVA: $" + $P{totalIva}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="280" y="245" width="275" height="15" forecolor="#A67B5B"/>
                <textElement textAlignment="Right">
                    <font size="9" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["Tributo Turismo: $" + $P{totalTributo}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="280" y="265" width="275" height="18" forecolor="#4CAF50"/>
                <textElement textAlignment="Right">
                    <font size="11" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["Total a Pagar: $" + $P{totalPagar}]]></textFieldExpression>
            </textField>

            <line>
                <reportElement x="0" y="285" width="555" height="1" forecolor="#4CAF50"/>
            </line>

            <!-- Código DTE y Observaciones -->
            <textField>
                <reportElement x="0" y="295" width="555" height="12" forecolor="#999999"/>
                <textElement>
                    <font size="8" isItalic="true"/>
                </textElement>
                <textFieldExpression><![CDATA["Cód. Generación DTE: " + $P{codigoGeneracion}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="0" y="308" width="555" height="12" forecolor="#999999"/>
                <textElement>
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{observaciones}]]></textFieldExpression>
            </textField>

        </band>
    </detail>
</jasperReport>
