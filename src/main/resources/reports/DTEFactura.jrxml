<?xml version="1.0" encoding="UTF-8"?>
<jasperReport
        xmlns="http://jasperreports.sourceforge.net/jasperreports"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
        name="DTEFactura"
        pageWidth="595"
        pageHeight="842"
        columnWidth="555"
        leftMargin="20"
        rightMargin="20"
        topMargin="20"
        bottomMargin="20"
        uuid="3e821c99-4b70-47e7-8f9c-b51f5cf9f0c8">

    <!-- Parámetros -->
    <parameter name="logoImage" class="java.lang.String"/>
    <parameter name="emisorNombre" class="java.lang.String"/>
    <parameter name="emisorNit" class="java.lang.String"/>
    <parameter name="emisorNrc" class="java.lang.String"/>
    <parameter name="emisorDireccion" class="java.lang.String"/>
    <parameter name="emisorTelefono" class="java.lang.String"/>
    <parameter name="emisorCorreo" class="java.lang.String"/>

    <parameter name="clienteNombre" class="java.lang.String"/>
    <parameter name="clienteDocumento" class="java.lang.String"/>
    <parameter name="clienteTelefono" class="java.lang.String"/>
    <parameter name="clienteCorreo" class="java.lang.String"/>
    <parameter name="fechaEmision" class="java.lang.String"/>
    <parameter name="horaEmision" class="java.lang.String"/>

    <parameter name="descripcionItem" class="java.lang.String"/>
    <parameter name="cantidadItem" class="java.lang.String"/>
    <parameter name="precioItem" class="java.lang.String"/>
    <parameter name="subtotalItem" class="java.lang.String"/>

    <parameter name="totalNeto" class="java.lang.String"/>
    <parameter name="totalIva" class="java.lang.String"/>
    <parameter name="totalTributo" class="java.lang.String"/>
    <parameter name="totalPagar" class="java.lang.String"/>

    <parameter name="codigoGeneracion" class="java.lang.String"/>
    <parameter name="observaciones" class="java.lang.String"/>

    <detail>
        <band height="700">

            <!-- Fondo -->
            <rectangle>
                <reportElement x="0" y="0" width="555" height="700" backcolor="#F9F5F3" mode="Opaque"/>
            </rectangle>

            <!-- Header Background -->
            <rectangle>
                <reportElement x="0" y="0" width="555" height="60" backcolor="#A5D6A7" mode="Opaque"/>
            </rectangle>

            <!-- Logo -->
            <image scaleImage="RetainShape">
                <reportElement x="20" y="10" width="100" height="40"/>
                <imageExpression><![CDATA[$P{logoImage}]]></imageExpression>
            </image>

            <!-- Título -->
            <textField>
                <reportElement x="130" y="10" width="405" height="40" forecolor="#6D4C41" mode="Transparent"/>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="16" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["FACTURA ELECTRÓNICA - DTE"]]></textFieldExpression>
            </textField>

            <!-- Línea divisoria -->
            <line>
                <reportElement x="20" y="65" width="515" height="1" forecolor="#A5D6A7"/>
            </line>

            <!-- Emisor -->
            <textField>
                <reportElement x="20" y="70" width="515" height="15" forecolor="#6D4C41"/>
                <textElement>
                    <font size="11" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{emisorNombre}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="20" y="87" width="515" height="12" forecolor="#444444"/>
                <textElement>
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA["NIT: " + $P{emisorNit} + " | NRC: " + $P{emisorNrc}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="20" y="99" width="515" height="12" forecolor="#444444"/>
                <textElement>
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{emisorDireccion}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="20" y="111" width="515" height="12" forecolor="#444444"/>
                <textElement>
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA["Tel: " + $P{emisorTelefono} + " | Correo: " + $P{emisorCorreo}]]></textFieldExpression>
            </textField>

            <line>
                <reportElement x="20" y="128" width="515" height="1" forecolor="#A5D6A7"/>
            </line>

            <!-- Cliente -->
            <textField>
                <reportElement x="20" y="135" width="515" height="12" forecolor="#6D4C41"/>
                <textElement>
                    <font size="10" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["CLIENTE: " + $P{clienteNombre}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="20" y="147" width="515" height="12" forecolor="#444444"/>
                <textElement>
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA["Documento: " + $P{clienteDocumento}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="20" y="159" width="515" height="12" forecolor="#444444"/>
                <textElement>
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA["Teléfono: " + $P{clienteTelefono}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="20" y="171" width="515" height="12" forecolor="#444444"/>
                <textElement>
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA["Correo: " + $P{clienteCorreo}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="20" y="183" width="515" height="12" forecolor="#444444"/>
                <textElement>
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA["Fecha Emisión: " + $P{fechaEmision} + " " + $P{horaEmision}]]></textFieldExpression>
            </textField>

            <line>
                <reportElement x="20" y="200" width="515" height="1" forecolor="#A5D6A7"/>
            </line>

            <!-- Cabecera Items -->
            <textField>
                <reportElement x="20" y="210" width="310" height="12" backcolor="#A5D6A7" forecolor="#6D4C41" mode="Opaque"/>
                <textElement>
                    <font size="9" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["Descripción"]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="340" y="210" width="50" height="12" backcolor="#A5D6A7" forecolor="#6D4C41" mode="Opaque"/>
                <textElement textAlignment="Right">
                    <font size="9" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["Cant"]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="395" y="210" width="65" height="12" backcolor="#A5D6A7" forecolor="#6D4C41" mode="Opaque"/>
                <textElement textAlignment="Right">
                    <font size="9" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["Precio"]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="465" y="210" width="70" height="12" backcolor="#A5D6A7" forecolor="#6D4C41" mode="Opaque"/>
                <textElement textAlignment="Right">
                    <font size="9" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["Subtotal"]]></textFieldExpression>
            </textField>

            <!-- Item -->
            <textField>
                <reportElement x="20" y="225" width="310" height="15" forecolor="#444444"/>
                <textElement>
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{descripcionItem}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="340" y="225" width="50" height="15" forecolor="#444444"/>
                <textElement textAlignment="Right">
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{cantidadItem}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="395" y="225" width="65" height="15" forecolor="#444444"/>
                <textElement textAlignment="Right">
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA["$" + $P{precioItem}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="465" y="225" width="70" height="15" forecolor="#444444"/>
                <textElement textAlignment="Right">
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA["$" + $P{subtotalItem}]]></textFieldExpression>
            </textField>

            <line>
                <reportElement x="20" y="245" width="515" height="1" forecolor="#A5D6A7"/>
            </line>

            <!-- Totales -->
            <rectangle>
                <reportElement x="275" y="260" width="260" height="70" backcolor="#A5D6A7" mode="Opaque"/>
            </rectangle>

            <textField>
                <reportElement x="280" y="265" width="250" height="12" forecolor="#6D4C41"/>
                <textElement textAlignment="Right">
                    <font size="9" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["Total Neto: $" + $P{totalNeto}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="280" y="279" width="250" height="12" forecolor="#6D4C41"/>
                <textElement textAlignment="Right">
                    <font size="9" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["IVA: $" + $P{totalIva}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="280" y="293" width="250" height="12" forecolor="#6D4C41"/>
                <textElement textAlignment="Right">
                    <font size="9" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["Tributo Turismo: $" + $P{totalTributo}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="280" y="310" width="250" height="15" forecolor="#FFFFFF" backcolor="#6D4C41" mode="Opaque"/>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="11" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["Total a Pagar: $" + $P{totalPagar}]]></textFieldExpression>
            </textField>

            <line>
                <reportElement x="20" y="330" width="515" height="1" forecolor="#A5D6A7"/>
            </line>

            <!-- Código DTE y Observaciones -->
            <textField>
                <reportElement x="20" y="340" width="515" height="12" forecolor="#999999"/>
                <textElement>
                    <font size="8" isItalic="true"/>
                </textElement>
                <textFieldExpression><![CDATA["Cód. Generación DTE: " + $P{codigoGeneracion}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="20" y="353" width="515" height="12" forecolor="#999999"/>
                <textElement>
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{observaciones}]]></textFieldExpression>
            </textField>

        </band>
    </detail>

</jasperReport>
