<?xml version="1.0" encoding="UTF-8"?>
<jasperReport
        xmlns="http://jasperreports.sourceforge.net/jasperreports"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
        name="DTEFactura"
        pageWidth="595"
        pageHeight="842"
        columnWidth="555"
        leftMargin="20"
        rightMargin="20"
        topMargin="20"
        bottomMargin="20">

    <!-- Parámetros -->
    <parameter name="logoImage" class="java.lang.String"/>
    <parameter name="emisorNombre" class="java.lang.String"/>
    <parameter name="emisorNit" class="java.lang.String"/>
    <parameter name="emisorNrc" class="java.lang.String"/>
    <parameter name="emisorDireccion" class="java.lang.String"/>
    <parameter name="emisorTelefono" class="java.lang.String"/>
    <parameter name="emisorCorreo" class="java.lang.String"/>
    <parameter name="clienteNombre" class="java.lang.String"/>
    <parameter name="clienteDocumento" class="java.lang.String"/>
    <parameter name="clienteTelefono" class="java.lang.String"/>
    <parameter name="clienteCorreo" class="java.lang.String"/>
    <parameter name="fechaEmision" class="java.lang.String"/>
    <parameter name="horaEmision" class="java.lang.String"/>
    <parameter name="descripcionItem" class="java.lang.String"/>
    <parameter name="cantidadItem" class="java.lang.String"/>
    <parameter name="precioItem" class="java.lang.String"/>
    <parameter name="subtotalItem" class="java.lang.String"/>
    <parameter name="totalNeto" class="java.lang.String"/>
    <parameter name="totalIva" class="java.lang.String"/>
    <parameter name="totalTributo" class="java.lang.String"/>
    <parameter name="totalPagar" class="java.lang.String"/>
    <parameter name="codigoGeneracion" class="java.lang.String"/>
    <parameter name="observaciones" class="java.lang.String"/>
    <parameter name="qrImageBase64" class="java.io.InputStream"/>

    <detail>
        <band height="700">

            <!-- Fondo -->
            <rectangle>
                <reportElement mode="Opaque" x="0" y="0" width="555" height="700" backcolor="#FFFFFF"/>
            </rectangle>

            <!-- Header Background -->
            <rectangle>
                <reportElement mode="Opaque" x="0" y="0" width="555" height="60" backcolor="#C8E6C9"/>
            </rectangle>

            <!-- Logo -->
            <image scaleImage="RetainShape">
                <reportElement x="20" y="10" width="40" height="40"/>
                <imageExpression><![CDATA[$P{logoImage}]]></imageExpression>
            </image>

            <!-- Título -->
            <textField>
                <reportElement mode="Transparent" x="80" y="10" width="455" height="40" forecolor="#33691E"/>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="16" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["FACTURA ELECTRÓNICA - DTE"]]></textFieldExpression>
            </textField>

            <line>
                <reportElement x="20" y="65" width="515" height="1" forecolor="#C8E6C9"/>
            </line>

            <!-- Emisor -->
            <textField>
                <reportElement x="20" y="183" width="515" height="15" forecolor="#33691E"/>
                <textElement>
                    <font size="11" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{emisorNombre}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="20" y="200" width="515" height="12" forecolor="#444444"/>
                <textElement>
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA["NIT: " + $P{emisorNit} + " | NRC: " + $P{emisorNrc}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="20" y="212" width="515" height="12" forecolor="#444444"/>
                <textElement>
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{emisorDireccion}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="20" y="224" width="515" height="12" forecolor="#444444"/>
                <textElement>
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA["Tel: " + $P{emisorTelefono} + " | Correo: " + $P{emisorCorreo}]]></textFieldExpression>
            </textField>

            <line>
                <reportElement x="20" y="241" width="515" height="1" forecolor="#C8E6C9"/>
            </line>

            <!-- Cliente -->
            <textField>
                <reportElement x="20" y="248" width="515" height="12" forecolor="#33691E"/>
                <textElement>
                    <font size="10" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["CLIENTE: " + $P{clienteNombre}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="20" y="260" width="515" height="12" forecolor="#444444"/>
                <textElement>
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA["Documento: " + $P{clienteDocumento}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="20" y="272" width="515" height="12" forecolor="#444444"/>
                <textElement>
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA["Teléfono: " + $P{clienteTelefono}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="20" y="284" width="515" height="12" forecolor="#444444"/>
                <textElement>
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA["Correo: " + $P{clienteCorreo}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="20" y="296" width="515" height="12" forecolor="#444444"/>
                <textElement>
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA["Fecha Emisión: " + $P{fechaEmision} + " " + $P{horaEmision}]]></textFieldExpression>
            </textField>

            <line>
                <reportElement x="20" y="313" width="515" height="1" forecolor="#C8E6C9"/>
            </line>

            <!-- Cabecera Items -->
            <textField>
                <reportElement mode="Opaque" x="20" y="323" width="310" height="12" forecolor="#33691E" backcolor="#C8E6C9"/>
                <textElement>
                    <font size="9" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["Descripción"]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement mode="Opaque" x="340" y="323" width="50" height="12" forecolor="#33691E" backcolor="#C8E6C9"/>
                <textElement textAlignment="Right">
                    <font size="9" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["Cant"]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement mode="Opaque" x="395" y="323" width="65" height="12" forecolor="#33691E" backcolor="#C8E6C9"/>
                <textElement textAlignment="Right">
                    <font size="9" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["Precio"]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement mode="Opaque" x="465" y="323" width="70" height="12" forecolor="#33691E" backcolor="#C8E6C9"/>
                <textElement textAlignment="Right">
                    <font size="9" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["Subtotal"]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="20" y="338" width="310" height="15" forecolor="#444444"/>
                <textElement>
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{descripcionItem}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="340" y="338" width="50" height="15" forecolor="#444444"/>
                <textElement textAlignment="Right">
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{cantidadItem}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="395" y="338" width="65" height="15" forecolor="#444444"/>
                <textElement textAlignment="Right">
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA["$" + $P{precioItem}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="465" y="338" width="70" height="15" forecolor="#444444"/>
                <textElement textAlignment="Right">
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA["$" + $P{subtotalItem}]]></textFieldExpression>
            </textField>

            <line>
                <reportElement x="20" y="358" width="515" height="1" forecolor="#C8E6C9"/>
            </line>

            <!-- Totales -->
            <rectangle>
                <reportElement mode="Opaque" x="275" y="373" width="260" height="70" backcolor="#F0F7F1"/>
            </rectangle>

            <textField>
                <reportElement x="280" y="378" width="250" height="12" forecolor="#33691E"/>
                <textElement textAlignment="Right">
                    <font size="9" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["Total Neto: $" + $P{totalNeto}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="280" y="392" width="250" height="12" forecolor="#33691E"/>
                <textElement textAlignment="Right">
                    <font size="9" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["IVA: $" + $P{totalIva}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="280" y="406" width="250" height="12" forecolor="#33691E"/>
                <textElement textAlignment="Right">
                    <font size="9" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["Tributo Turismo: $" + $P{totalTributo}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="280" y="420" width="250" height="15" forecolor="#2E7D32"/>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="11" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["Total a Pagar: $" + $P{totalPagar}]]></textFieldExpression>
            </textField>

            <line>
                <reportElement x="15" y="460" width="515" height="1" forecolor="#C8E6C9"/>
            </line>

            <textField>
                <reportElement x="20" y="490" width="515" height="12" forecolor="#999999"/>
                <textElement>
                    <font size="8" isItalic="true"/>
                </textElement>
                <textFieldExpression><![CDATA["Cód. Generación DTE: " + $P{codigoGeneracion}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="20" y="503" width="515" height="12" forecolor="#999999"/>
                <textElement>
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{observaciones}]]></textFieldExpression>
            </textField>

            <image scaleImage="RetainShape">
                <reportElement x="20" y="70" width="100" height="100"/>
                <imageExpression><![CDATA[$P{qrImageBase64}]]></imageExpression>
            </image>

        </band>
    </detail>
</jasperReport>
